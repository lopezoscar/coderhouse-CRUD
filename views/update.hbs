<script>
    function update(){
        var product = {
            marca:$("#inputMarca").val(),
            modelo:$("#inputModelo").val(),
            precio:$("#inputPrecio").val(),
            descripcion:$("#inputDesc").val(),
            imagen:$("#inputImagen").val()
        };
        product._id = "{{product._id}}";

        $.post("/update",product,function(result){
            alert(result);
        });
    }
</script>
<form class="form-horizontal">
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Marca</label>
        <div class="col-sm-10">
            <input value="{{product.marca}}" type="text" name="marca" class="form-control" id="inputMarca" placeholder="Marca" >
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Modelo</label>
        <div class="col-sm-10">
            <input value="{{product.modelo}}" type="text" name="modelo" class="form-control" id="inputModelo" placeholder="Modelo">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Descripcion</label>
        <div class="col-sm-10">
            <input value="{{product.descripcion}}" type="text" name="descripcion" class="form-control" id="inputDesc" placeholder="Descripcion">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Imagen</label>
        <div class="col-sm-10">
            <input value="{{product.imagen}}" type="text" name="imagen" class="form-control" id="inputImagen" placeholder="Imagen">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Precio</label>
        <div class="col-sm-10">
            <input value="{{product.precio}}" type="text" name="precio" class="form-control" id="inputPrecio" placeholder="Precio">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button onclick="update()" type="button" class="btn btn-default">Actualizar</button>
        </div>
    </div>
</form>

